<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Agendamento</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .day-btn.active {
      background-color: #0d6efd;
      color: white;
    }
    .time-btn.active {
      background-color: #198754;
      color: white;
    }
  </style>
</head>
<body>
<div class="container mt-5">
  <h2 class="text-center mb-4">Agende seu horário</h2>

  <!-- Seleção do dia -->
  <h5>Escolha o dia:</h5>
  <div class="row g-3 mb-4">
    <div class="col text-center"><button class="btn btn-outline-primary day-btn" data-day="Segunda">Segunda</button></div>
    <div class="col text-center"><button class="btn btn-outline-primary day-btn" data-day="Terça">Terça</button></div>
    <div class="col text-center"><button class="btn btn-outline-primary day-btn" data-day="Quarta">Quarta</button></div>
    <div class="col text-center"><button class="btn btn-outline-primary day-btn" data-day="Quinta">Quinta</button></div>
    <div class="col text-center"><button class="btn btn-outline-primary day-btn" data-day="Sexta">Sexta</button></div>
  </div>

  <!-- Seleção do horário -->
  <div id="timeSelection" style="display:none;">
    <h5>Escolha o horário para <span id="selectedDayText"></span>:</h5>
    <div class="row g-3 mb-4">
      <div class="col text-center"><button class="btn btn-outline-success time-btn">09:00</button></div>
      <div class="col text-center"><button class="btn btn-outline-success time-btn">10:00</button></div>
      <div class="col text-center"><button class="btn btn-outline-success time-btn">11:00</button></div>
      <div class="col text-center"><button class="btn btn-outline-success time-btn">14:00</button></div>
      <div class="col text-center"><button class="btn btn-outline-success time-btn">15:00</button></div>
    </div>
  </div>

  <!-- Confirmação -->
  <div id="confirmation" style="display:none;" class="text-center">
    <h4>Você escolheu:</h4>
    <p>Dia: <span id="finalDay"></span></p>
    <p>Horário: <span id="finalTime"></span></p>
    <button class="btn btn-primary mt-3">Confirmar Agendamento</button>
  </div>
</div>

<script>
  const dayButtons = document.querySelectorAll('.day-btn');
  const timeButtons = document.querySelectorAll('.time-btn');
  const timeSelection = document.getElementById('timeSelection');
  const selectedDayText = document.getElementById('selectedDayText');
  const confirmation = document.getElementById('confirmation');
  const finalDay = document.getElementById('finalDay');
  const finalTime = document.getElementById('finalTime');

  let selectedDay = '';
  let selectedTime = '';

  // Seleção do dia
  dayButtons.forEach(btn => {
    btn.addEventListener('click', () => {
      dayButtons.forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
      selectedDay = btn.dataset.day;
      selectedDayText.textContent = selectedDay;

      // Mostra os horários
      timeSelection.style.display = 'block';
      confirmation.style.display = 'none';
      timeButtons.forEach(t => t.classList.remove('active'));
    });
  });

  // Seleção do horário
  timeButtons.forEach(btn => {
    btn.addEventListener('click', () => {
      timeButtons.forEach(t => t.classList.remove('active'));
      btn.classList.add('active');
      selectedTime = btn.textContent;

      // Mostra confirmação
      finalDay.textContent = selectedDay;
      finalTime.textContent = selectedTime;
      confirmation.style.display = 'block';
    });
  });
</script>
</body>
</html>
